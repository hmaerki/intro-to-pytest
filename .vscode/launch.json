    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (debug-test)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Pytest: all",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests"
            ],
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Pytest: current file",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${relativeFile}",
                "-s",
                "-v"
            ],
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Pytest: tests/60_dependency_test.py",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/60_dependency_test.py",
                "-sv"
            ],
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Pytest: tests/91_smoke_test.py::test_letters_2[d]",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                // "tests/91_smoke_test.py::test_letters_2[d]",
                "tests/91_smoke_test.py::test_letters_2",
                "-sv",
                "-m smoke"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        }
    ]
}